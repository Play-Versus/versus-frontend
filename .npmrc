# Faster installations
shamefully-hoist=true

# Strict peer dependencies (prevents version conflicts)
strict-peer-dependencies=false

# Public hoist pattern (fixes some library issues)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Auto install peers
auto-install-peers=true

# Use node linker (optional, for better compatibility)
# node-linker=hoisted

# Lockfile settings
lockfile=true

# Registry (optional, for faster downloads in some regions)
# registry=https://registry.npmmirror.com